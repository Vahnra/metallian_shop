{% extends 'base.html.twig' %}

{% block title %}Hello VoirMediaController!{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-12 bg-dark text-white">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-11"><h1>Vêtements : {{ medium.0.title }}</h1></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-1 pt-3 text-center bg-dark ">
            
            <img src={{ asset('images/'~medium.0.photo1) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~medium.0.photo2) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~medium.0.photo3) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
        </div>

        <div class="col-7 pt-3 bg-light border-bottom border-dark">
            <img id="imageBox" src={{ asset('images/'~medium.0.photo1) }} class="rounded mx-auto d-block p-2" title="Grande image du produit"/>

        </div>

        <div class="col-4 pt-3 bg-light border-bottom border-end border-dark">
            <h2>{{ medium.0.title }}</h2>
            <h3>{{ artist.0.artist }}</h3>
            <p>{{ musicType.0.genre }}</p>
            <h4>{{ medium.0.description }}</h4>
            <p>{{ medium.0.sousCategorie }}</p>
            <p>{{ medium.0.price/100 }}€</p>
            <div class="col mb-3 text-center">
                <button type="button" class="btn btn-success">Ajouter au panier</button>
            </div>
            <div class="col-12 p-2 border-top border-dark bg-light">
                <h3>description</h3>
                <p>
                 {{ medium.0.longDescription }}
                </p>
            </div>
            <div class="col-12 p-2 border-top border-dark bg-light">
                <h3><i class="fa-solid fa-truck-fast"></i>  {{ expedition.0.title }}</h3> 
                <p>{{ expedition.0.description }}</p> 
                <p>{{ expedition.0.longDescription }}</p> 
            </div> 
        </div>

    </div>
</div>
<div class="container">
    <div class="row">
      
        <div class="col-12 bg-light ">   
            <h2>Produits similaires</h2>
        </div>

        {% for medium in similarItm |slice(0,4)%} 
        <div class="col-3 bg-light mb-3"> 
            <div class="card" style="width: 18rem;">
                <img src={{ asset('images/'~medium.photo1) }} class="card-img-top">
                <div class="card-body">
                     <h5 class="card-title">{{ medium.title }}</h5> 
                     <h6>{{ medium.artist }}</h6>
                      <p>{{ medium.sousCategorie }}</p>
                    <p class="card-text">{{ medium.description }}</p>
                    <p>{{ medium.price/100 }}€</p>
                    <div class="text-center">
                        <a href={{ path('voir_media', {'id':medium.id})}} class="btn btn-warning">Plus d'informations</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
            
        

        {% for medium in similaeGnr |slice(0,4) %} 
          <div class="col-3 bg-light mb-3"> 
            <div class="card" style="width: 18rem;">
                <img src={{ asset('images/'~medium.photo1) }} class="card-img-top">
                <div class="card-body">
                     <h5 class="card-title">{{ medium.title }}</h5> 
                     <h6>{{ medium.artist }}</h6>
                      <p>{{ medium.sousCategorie }}</p>
                    <p class="card-text">{{ medium.description }}</p>
                    <p>{{ medium.price/100 }}€</p>
                    <div class="text-center">
                        <a href={{ path('voir_media', {'id':medium.id})}} class="btn btn-warning">Plus d'informations</a>
                    </div>
                </div>
            </div>
        </div>

        {% endfor %} 

    </div>

 

</div> 

{# ------------------------------------------------------- #}
<script>
    function myFunction(smallImg){
        var fullImg = document.getElementById("imageBox");
        fullImg.src = smallImg.src;
    }
</script>

{% endblock %}
