{% for category in categories %}

    <li class="nav-item dropdown">
        <div class="navigation-color">
            <a class="nav-link dropdown-toggle categorieNav" href="{{ path('show_vetements_from_category', {"title": category.title}) }}" id="navbarDropdown{{ category.title }}" role="button"  aria-expanded="false">
            
                {{ category.title }}
            
            </a>
        </div>

        {% if (category.title != 'CDs') and (category.title != 'Vinyles') %}
            <ul class="dropdown-menu multi-column columns-2 border-0 rounded-0 shadow p-3 mb-5 bg-body rounded" aria-labelledby="navbarDropdown{{ category.title }}">
                <div class="row bg">
                
                    <div class="col-sm-6">
                        
                        <ul class="multi-column-dropdown">
                            <li>
                                {% for subcategory in sousCategoriesGauche %}

                                    {% if subcategory.categorie.title == category.title %}
                                    
                                        <a class="dropdown-item text-underline-hover"  href="{{ path('show_souscategorie_from_category', {"title": subcategory.title, "title1": category.title}) }}">{{ subcategory.title }}</a>

                                    {% endif %}

                                {% endfor %}
                                
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <ul class="multi-column-dropdown">

                            <li>
                                {% for subcategory in sousCategoriesDroite %}

                                    {% if subcategory.categorie.title == category.title %}
                                    
                                        <a class="dropdown-item text-underline-hover"  href="{{ path('show_souscategorie_from_category', {"title": subcategory.title, "title1": category.title}) }}">{{ subcategory.title }}</a>

                                    {% endif %}

                                {% endfor %}
                                
                            </li>
                        </ul>
                    </div>
                </div>
            </ul>
        {% endif %}

    </li>

{% endfor %}