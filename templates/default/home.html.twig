{% extends 'base.html.twig' %}

{% block title %}Metallian Shop{% endblock %}

{% block body %}


<div class="container-xl">
    <div class="row">
        <div class="col-12 g-0">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">            
                <div class="carousel-item active">
                {% if slider is not empty %}
                <a href={{ slider.0.link }}>
                <img src={{ asset('images/'~slider.0.photo1) }} class="d-block w-100" title="{{ slider.0.title1 }}" alt="{{ slider.0.title1 }}"/>
                </a>
                </div>
                <div class="carousel-item">
                <a href={{ slider.0.link2 }}>
                <img src={{ asset('images/'~slider.0.photo2) }} class="d-block w-100" title="{{ slider.0.title2 }}" alt="{{ slider.0.title2 }}"/>
                </a>
                </div>
                <div class="carousel-item">
                <a href={{ slider.0.link3 }}>
                <img src={{ asset('images/'~slider.0.photo2) }} class="d-block w-100" title="{{ slider.0.title3 }}" alt="{{ slider.0.title3 }}"/>
                </a>
                {% endif %}
                </div>   
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-12 p-3 bg-white text-dark">
            <h1>Nouveautées pour les femmes</h1>     
            <div class="row text-center">

                {% for vetement in nouveautesFemme | slice(0, 4) %}
                    
                    {% if vetement.categorie.title == 'Femme' %}

                        {# <div class="col-3 mx-auto">

                            <a href="#" class="text-decoration-none text-dark">

                                <img src="{{ asset('images/' ~ vetement.photo) }}" style="max-width: 17rem; object-fit: cover" class="p-4" alt="text text" title="text">

                                <p>{{ vetement.price/100 }} €</p>

                            </a>

                        </div> #}

                        <div class="card g-0 mx-auto my-5 border-0" style="width: 15rem;">

                            <a href="{{ path('voir_vetement', {"id": vetement.id}) }}" class="text-decoration-none text-black">

                                <img src="{{ asset('images/' ~ vetement.photo) }}" style="height: 300px; object-fit: contain;" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item fw-bold">{{ (vetement.price)/100 }} €</li>
                                    </ul>
                                     <h5 class="card-title">{{ vetement.title }}</h5>
                                    {#<p class="card-text">{{ vetement.description }}</p>
                                    <a href="#" class="card-link">Ajouter au panier</a> #}
                                </div>      

                            </a>

                        </div>

                    {% endif %}

                {% endfor %}

            </div>
        </div>
    </div>
    <div class="row" >
        <div class="col-12 p-3 bg-dark text-white">
            <h2>Nouveautées pour les hommes</h2>     
            <div class="row text-center">

                {% for vetement in nouveautesHomme %}
                    
                    {% if vetement.categorie.title == 'Homme' %}

                        <div class="col-3 mx-auto">

                            {# <a href="#" class="text-decoration-none text-white">

                                <img src="{{ asset('images/' ~ vetement.photo) }}" style="max-width: 17rem; object-fit: cover" class="p-4" alt="text text" title="text">

                                <p>{{ vetement.price/100 }} €</p>

                            </a> #}

                            <div class="card g-0 mx-auto my-5 border-0 bg-dark" style="width: 15rem;">

                                <a href="{{ path('voir_vetement', {"id": vetement.id}) }}" class="text-decoration-none text-black">

                                    <img src="{{ asset('images/' ~ vetement.photo) }}" style="height: 300px; object-fit: contain;" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <ul class="list-group list-group-flush ">
                                            <li class="list-group-item bg-dark text-white fw-bold">{{ (vetement.price)/100 }} €</li>
                                        </ul>
                                        <h5 class="card-title">{{ vetement.title }}</h5>
                                        {# <p class="card-text">{{ vetement.description }}</p>
                                        <a href="#" class="card-link">Ajouter au panier</a> #}
                                    </div>      

                                </a>

                            </div>

                        </div>

                    {% endif %}

                {% endfor %}
            </div>
        </div>
    </div>
</div>





{% endblock %}
