							<script>

                                document.addEventListener("DOMContentLoaded", () => {
                                    document.getElementById("article" + "{{searchResult.title}}{{searchResult.id}}").src = "{{ asset('images/' ~ searchResult.photo) }}";
                                });                                                 
                                            
                                function functionImageEnter(){
                                    var image = document.getElementById("article" + "{{searchResult.title}}{{searchResult.id}}");
                                    image.src = "{{ asset('images/' ~ searchResult.photo2) }}";
                                }

                                function functionImageLeave(){
                                    var image = document.getElementById("article" + "{{searchResult.title}}{{searchResult.id}}");
