{% extends 'base.html.twig' %}

{% block title %}Voir une accessoire{% endblock %}

{% block body %}
{# {{ dump(accessoire) }} #}

<div class="container-xl">
    <div class="row">
            <div class="col-12 bg-dark text-white">
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10">             
                        <h1>Accessoire : {{ accessoire.0.title }}</h1>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-1 text-center bg-dark ">
                
                <img src={{ asset('images/'~accessoire.0.photo) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
                <img src={{ asset('images/'~accessoire.0.photo2) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
                <img src={{ asset('images/'~accessoire.0.photo3) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
                <img src={{ asset('images/'~accessoire.0.photo4) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
                <img src={{ asset('images/'~accessoire.0.photo5) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
        
            </div>

            <div class="col-7 pt-3 bg-light text-center border-bottom border-dark">
                <img id="imageBox" src={{ asset('images/'~accessoire.0.photo) }} class="img-fluid p-2" title="Grande image du produit"/>

            </div>

            <div class="col-4 pt-3 bg-light border-bottom border-end border-dark">
                <div class="row">
                    <div class="col-8">
                        <h3>{{ accessoire.0.description }}</h3>
                    </div>

                    {# Favorite button #}
                    {% if app.user is null %}
                        <a class="col-2 justify-content-end d-flex align-items-center text-decoration-none text-dark" href="{{ path('app_login')}}">
                            <i type="button" class="fa-regular fa-heart fa-2x"></i>
                        </a> 
                    {% else %}
                        {% if userFavorites is not empty %}
                            <a class="col-2 justify-content-end d-flex align-items-center text-decoration-none text-dark" alt="blabla" href="{{ path('remove_favorite_accessoires', {'id':accessoire.0.id})}}">
                                <i type="button" class="fa-solid fa-heart fa-2x"></i>
                            </a>
                        {% else %}
                            <a class="col-2 justify-content-end d-flex align-items-center text-decoration-none text-dark" href="{{ path('add_favorite_accessoires', {'id':accessoire.0.id})}}">
                                <i type="button" class="fa-regular fa-heart fa-2x"></i>
                            </a>
                        {% endif %}
                    {% endif %}
                    {# End favorite button #}

                    <div class="col-2 my-auto justify-content-end d-flex">
                        <h3 class="my-auto fw-bold">{{ accessoire.0.price/100 }}€</h3> 
                    </div>
                </div>

                <form method="post">

                    <div class="col-6 py-4">

                        <p><span>Choisissez une couleur :</span></p>
                    
                        <select class="form-select" id="test" name="color" aria-label="Default select example">
                            <option selected>Couleur</option>

                            {% for couleur in couleurs %}

                                <option value="{{ couleur.id }}">{{ couleur.color }}</option>

                            {% endfor %}
                            
                        </select>
                    </div>

                    <div class="col-6 pt-3 pb-4">

                        <p><span>Choisissez une taille :</span></p>

                        <select class="form-select" id="test2" name="size" aria-label="Default select example">
                            <option selected>Taille</option>              
                        
                        </select>
                    </div>

                    <script>

                    var test = {{ accessoiresVariations|json_encode(constant('JSON_HEX_TAG'))|raw }};

                    console.log(test);
        
                    var options=""; 
                    
                    $("#test").on('click',function(){ 
                        var value=$(this).val(); 
                        options="<option>Taille</option>"
                        
                        for(let i = 0 ; i < test.length; i++) {
                            if(value == test[i].color.id)
                            {
                                options+="<option value='" + test[i].size.id + "'>" + test[i].size.size + "</option>"

                                $("#test2").html(options);

                            }
                        }
                    });
                
                    </script>

               

                    <div class="col-6 mb-4">
                        {{form(form)}}
                    </div>

                
                </form>
                
                <div class="col-12 p-2 border-top border-dark bg-light">
                    <h3>description</h3>
                    <p>
                    {{ accessoire.0.longDescription }}
                    </p>  
                </div>
               
                <div class="col-12 p-2 border-top border-dark bg-light">
                   <h3><i class="fa-solid fa-truck-fast"></i>  {{ expedition.0.title }}</h3> 
                   <p>{{ expedition.0.description }}</p> 
                   <p>{{ expedition.0.longDescription }}</p> 

                </div>      
            </div>

            </div>
        </div>
    </div>
    {# ------------------------------similaires itm------------- #}
    <div class="container">
        <div class="row">
            <div class="col-12 bg-light">
                <h2>Produits similaires</h2>
            </div>


            {% for accessoire in similarItm | slice(0,4) %} 
            <div class="col-3 bg-light mb-3"> 
                <div class="card" style="width: 18rem;">
                    <img src={{ asset('images/'~accessoire.photo) }} class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{ accessoire.title }}</h5> 
                        <p>{{ accessoire.sousCategorie }}</p>
                        <p class="card-text">{{ accessoire.description }}</p>
                        <p>{{ accessoire.price/100 }}€</p>
                        <div class="text-center">
                            <a href={{ path('voir_accessoires', {'id':accessoire.id})}} class="btn btn-warning">Plus d'informations</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}



        </div>
        {# end row #}
</div>
{# end container #}
{# ---------------------------------gallery script----------------- #}
<script>
    function myFunction(smallImg){
        var fullImg = document.getElementById("imageBox");
        fullImg.src = smallImg.src;
    }
</script>

{% endblock %}
