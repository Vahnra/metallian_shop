{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

    <div class="container-xl">

        <div class="col-7 mx-auto mt-3 mb-4">

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h1>Réinitialisez votre mot de passe</h1>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="mb-2">
                    <small>
                        Entrez votre adresse mail et nous vous enverrons un mail pour réinitialiser votre mote de passe.
                    </small>
                </div>

                <button class="btn" style="color: white; background-color: #cd0019">Envoyer le mail de réinitialisation</button>
            {{ form_end(requestForm) }}

        </div>

    </div>
{% endblock %}
