{% extends "base.html.twig" %}

{% block title %}Vetements {{ categories.title }}{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="my-3">Vetements pour {{ categories.title }}</h1>

        <div class="container-fluid">
        
            <div class="row">
            
                <div class="col-2">
                
                    <p>Catégories</p>
                    <h3>{{ categories.title }}</h3>
                    <ul class="">

                        {% for subcategory in souscategories %}

                            {% if subcategory.categorie.title == categories.title %}
                            

                                <li href="#"><a href="">{{ subcategory.title }}</a></li>


                            {% endif %}

                        {% endfor %}

                    </ul>
                
                </div>

                <div class="col-10">

                    <h3>{{ categories.title }}</h3>

                    <div class="row">

                        {% for vetement in vetements %}
                    
                        <div class="card g-0 mx-auto my-2" style="width: 15rem;">
                            <img src="{{ asset('images/' ~ vetement.photo) }}" style="height: 200px; object-fit: cover;" class="card-img-top" alt="...">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">{{ (vetement.price)/100 }} €</li>
                            </ul>
                            <div class="card-body">
                                <h5 class="card-title">{{ vetement.title }}</h5>
                                <p class="card-text">{{ vetement.description }}</p>
                                <a href="#" class="card-link">Ajouter au panier</a>
                            </div>                
                  
                        </div>
                    
                        {% endfor %}

                    </div>
                
                
                </div>
            
            </div>
        
        
        </div>
    </div>

{% endblock %}