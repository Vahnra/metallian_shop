{% extends "base.html.twig" %}

{% block title %}{{ categories.title }}{% endblock %}

{% block body %}

    {# Titre dynamique #}

    <div class="container-xl bg-white">

        {# <h1 class="py-2 ms-4">

            {% if categories.title == 'Femme' %}
            
                Vêtements pour Femme 

            {% elseif categories.title == 'Homme' %}

                Les vêtements pour Homme

            {% endif %}

        </h1> #}

        <div class="container-fluid py-4">
        
            <div class="row">
            
                <div class="col-xl-2">
                
                    <p class="mt-2">Catégories</p>
                    <h3><a class="text-underline-hover text-black" href="{{ path('show_vetements_from_category', {"title": categories.title}) }}">{{ categories.title }}</a></h3>

                    <div class="row">
                        <nav class="navbar navbar-expand-lg">
                            <div class="container-fluid" style="flex-direction: column">
                                <button class="navbar-toggler mb-4 no-border-radius" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSubCategories" aria-controls="offcanvasNavbar">
                                    <span class="">Sous catégories</span>
                                </button>
                                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasSubCategories" aria-labelledby="offcanvasSubCategories">
                                    <div class="offcanvas-header">
                                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Sous catégories</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                    </div>
                                    <div
                                        class="offcanvas-body">

                                        {# Parties sous catégories #}
                                        <ul
                                            class="ps-3" style="list-style-type: none">

                                            {# For pour afficher les sous catégories en question #}
                                            {% for subcategory in souscategories %}

                                                {% if subcategory.categorieMerchandising.title == categories.title %}

                                                    <li>
                                                        <a class="text-underline-hover text-black" href="{{ path('show_merchandising_sous_categorie', {"title": subcategory.title, "title1": categories.title}) }}">{{ subcategory.title }}</a>
                                                    </li>

                                                {% endif %}

                                            {% endfor %}

                                        </ul>

                                    </div>
                                </div>
                            </div>
                        </nav>

                        <nav class="navbar navbar-expand-lg">
                            <div class="container-fluid" style="flex-direction: column">
                                <button class="navbar-toggler mb-4 no-border-radius" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilter" aria-controls="offcanvasNavbar">
                                    <span class="">Filtres</span>
                                </button>
                                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasFilter" aria-labelledby="offcanvasNavbarLabel">
                                    <div class="offcanvas-header">
                                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Filtres</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                    </div>
                                    <div class="offcanvas-body">
                                        
                                        <div class="pt-3 border-top">

                                            {% if categories.title == 'Merchandising Femme' %}
                                            
                                                {{ form(filterForm) }}

                                            {% endif %}

                                            {% if categories.title == 'Merchandising Homme' %}
                                            
                                                {{ form(filterForm) }}

                                            {% endif %}

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </nav>  
                        
                    </div>
                </div>

                <div class="col-xl-10">

                    <div class="row mb-3">

                        {# <h3 class="col-9"><a href="{{ path('default_home') }}" class="text-underline-hover text-black">Accueil</a> / {{ categories.title }}</h3> #}
                        <h3 class="col-8" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item text-underline-hover"><a class="text-decoration-none text-muted" href="{{ path('default_home') }}">Accueil</a></li>
                                <li class="breadcrumb-item active">{{ categories.title }}</li>
                            </ol>
                        </h3>

                        {# Select pour trier #}
                        <div class="col-3 ms-auto">


                            <select class="form-select no-border-radius" onChange="window.location=this.value;">
                                <option selected>Trier par</option>
                                <option value="{{ path('show_vetements_from_category', {"title": categories.title}) }}?direction=asc&sort=v.title&page=1">Nouveaux arrivages</option>
                                <option value="{{ path('show_vetements_from_category', {"title": categories.title}) }}?direction=asc&sort=v.price&page=1">Pris plus bas à élévé</option>
                                <option value="{{ path('show_vetements_from_category', {"title": categories.title}) }}?direction=desc&sort=v.price&page=1">Pris plus élévé à bas</option>
                            </select>
                            
                        </div>

                    </div>    

                    <div class="row mx-auto">

                        
                        {# For pour afficher les vetements en forme de cartes #}

                        {# {% if categories.title == 'Femme' %} #}
                        

                            {% for vetement in vetements %}
                        
                                <div class="card g-0 mx-auto my-2 border-0 border-bottom rounded-0" style="width: 15rem;">

                                    <a href="{{ path('voir_vetement_merch', {'id': vetement.id}) }}" class="text-decoration-none text-black">

                                        <img src="{{ asset('images/' ~ vetement.photo) }}" id="article{{vetement.title}}{{vetement.id}}" style="height: 200px; object-fit: contain;" class="card-img-top" alt="{{ vetement.title }}">
                                        <div class="card-body">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item fw-bold">{{ (vetement.price)/100 }} €</li>
                                            </ul>
                                            <h5 class="card-title text-muted">{{ vetement.title }}</h5>
                                                {% set colors = {} %}
                                                {% for variations in vetement.vetementMerchandisingQuantities.values %}

                                                    {% if variations.color.code not in colors %}
                                                    
                                                        {% set colors = colors | merge({ (variations.color.id): variations.color.code}) %}
                                                    
                                                    {% endif %}
                                                    

                                                {% endfor %}

                                                {% for color in colors %}
                                                    <div class="border" style="height: 24px; width: 24px; background-color: white; border-radius: 50%; display: inline-block;">
                                                        <div class="mx-auto" style="height: 16px; width: 16px; background-color: {{ color}}; border-radius: 50%; margin-top: 3px;"></div>
                                                    </div>
                                                
                                                {% endfor %}
                                            {# <p class="card-text">{{ vetement.description }}</p> #}
                                        </div>      

                                    </a>

                                </div>

                            <script>
                                
                                function functionImageEnter(){
                                    var image = document.getElementById("article" + "{{vetement.title}}{{vetement.id}}");
                                    image.src = "{{ asset('images/' ~ vetement.photo2) }}";
                                    
                                }

                                function functionImageLeave(){
                                    var image = document.getElementById("article" + "{{vetement.title}}{{vetement.id}}");
                                    image.src = "{{ asset('images/' ~ vetement.photo) }}";
                                }

                                document.getElementById("article" + "{{vetement.title}}{{vetement.id}}").addEventListener("mouseenter", functionImageEnter);
                                document.getElementById("article" + "{{vetement.title}}{{vetement.id}}").addEventListener("mouseleave", functionImageLeave);
         
                            </script>

                            {% endfor %}

                            {% for accessoire in accessoires %}
                    
                                <div class="card g-0 mx-auto my-2 border-0 border-bottom rounded-0" style="width: 15rem;">

                                    <a href="{{ path('voir_accessoires_merch', {"id": accessoire.id} ) }}" class="text-decoration-none text-black">

                                        <img src="{{ asset('images/' ~ accessoire.photo) }}" id="article{{accessoire.title}}{{accessoire.id}}" style="height: 200px; object-fit: contain;" class="card-img-top" alt="{{ accessoire.title }}">
                                        <div class="card-body">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item fw-bold">{{ (accessoire.price)/100 }} €</li>
                                            </ul>
                                            <h5 class="card-title text-muted">{{ accessoire.title }}</h5>
                                                {% set colors = {} %}
                                                {% for variations in accessoire.accessoiresMerchandisingQuantities.values %}

                                                    {% if variations.color.code not in colors %}
                                                    
                                                        {% set colors = colors | merge({ (variations.color.id): variations.color.code}) %}
                                                    
                                                    {% endif %}
                                                    

                                                {% endfor %}

                                                {% for color in colors %}
                                                    <div class="border" style="height: 24px; width: 24px; background-color: white; border-radius: 50%; display: inline-block;">
                                                        <div class="mx-auto" style="height: 16px; width: 16px; background-color: {{ color}}; border-radius: 50%; margin-top: 3px;"></div>
                                                    </div>
                                                
                                                {% endfor %}
                                        </div>      

                                    </a>

                                </div>

                            <script>
                                
                                function functionImageEnter(){
                                    var image = document.getElementById("article" + "{{accessoire.title}}{{accessoire.id}}");
                                    image.src = "{{ asset('images/' ~ accessoire.photo2) }}";
                                }

                                function functionImageLeave(){
                                    var image = document.getElementById("article" + "{{accessoire.title}}{{accessoire.id}}");
                                    image.src = "{{ asset('images/' ~ accessoire.photo) }}";
                                }

                                document.getElementById("article" + "{{accessoire.title}}{{accessoire.id}}").addEventListener("mouseenter", functionImageEnter);
                                document.getElementById("article" + "{{accessoire.title}}{{accessoire.id}}").addEventListener("mouseleave", functionImageLeave);
                
                            </script>
                        
                            {% endfor %}

                        {# {% endif %} #}

                        
                        {# Pagination #}

                        {% if vetements is not null %}

                            <div class="container mt-3">
                        
                                <div class="row">
                            
                                    <div class="col-12 ms-auto">
                                
                                        {{ knp_pagination_render(vetements) }}
                                
                                    </div>
                            
                                </div>

                            </div>
                            
                        {% endif %}

                    </div>
                
                
                </div>
            
            </div>
        
        
        </div>
    </div>

{% endblock %}