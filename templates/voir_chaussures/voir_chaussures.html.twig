{% extends 'base.html.twig' %}

{% block title %}Chaussures!{% endblock %}

{% block body %}

<div class="container-xl">
    <div class="row">
        <div class="col-12 bg-dark text-white">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-11"><h1>Chaussures : {{ chaussure.0.title }}</h1></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-1 pt-3 text-center bg-dark ">
            
            <img src={{ asset('images/'~chaussure.0.photo) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~chaussure.0.photo2) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~chaussure.0.photo3) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~chaussure.0.photo4) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
        </div>

        <div class="col-7 text-center pt-3 bg-light border-bottom border-dark">
            <img id="imsgeBox" src={{ asset('images/'~chaussure.0.photo) }} class="img-fluid p-2" title="Grande image du produit"/>

        </div>

        <div class="col-4 pt-3 bg-light border-bottom border-end border-dark">
        <div class="row">
            <div class="col-8">
                <h2>{{ chaussure.0.description }}</h2>
            </div>

            <div class="col-4 my-auto justify-content-end d-flex">
                <h3 class="my-auto fw-bold">{{ chaussure.0.price/100 }}€</h3>
            </div>
        </div>

        {% include "include/_flashes.html.twig" %}

        <div class="col-6 pt-3 pb-4">

            <p><span>Choisissez une taille :</span></p>

            <div id="test3">
                <label class="mx-2">
                    <input type="radio" class="testRadio" name="test" value="small"><div class="text-center align-middle testSelect" alt="Option 1" style="width: 3em; height: 2.4em; border-radius: 4px; border: solid 1px black; justify-content: center; align-items: center;display: flex;">S</div>
                </label>
                <label class="mx-2">
                    <input type="radio" class="testRadio" name="test" value="small"><div class="text-center align-middle testSelect" alt="Option 2" style="width: 3em; height: 2.4em; border-radius: 4px; border: solid 1px black; justify-content: center; align-items: center;display: flex;">M</div>
                </label>
                <label class="mx-2">
                    <input type="radio" class="testRadio" name="test" value="small"><div class="text-center align-middle testSelect" alt="Option 2" style="width: 3em; height: 2.4em; border-radius: 4px; border: solid 1px black; justify-content: center; align-items: center;display: flex;">L</div>
                </label>
            </div>

            <div class="pt-3 text-primary" data-bs-toggle="modal" data-bs-target="#sizeGuideModal" style="cursor: pointer;"><i class="fa-solid fa-ruler-horizontal"></i> Guide des tailles</div>

        </div>
            
        <div class="col-12 mb-4">
                    {{form_start(form)}}
                        <div class="col-6">
                            {{form_row(form.quantity)}}
                        </div>
                        <div class="row">
                            <div class="col-6">
                                {{form_row(form.submit)}}
                            </div>

                            {# Favorite button #}
                            {% if app.user is null %}
                                <a class="col-2 p-0 mt-1 d-flex text-decoration-none text-dark" href="{{ path('app_login')}}">
                                    <i type="button" class="fa-regular fa-heart fa-2x"></i>
                                </a>
                            {% else %}
                                {% if userFavorites is not empty %}
                                    <a class="col-2 p-0 mt-1 d-flex text-decoration-none text-dark" alt="blabla" href="{{ path('remove_favorite_chaussures', {'id':chaussure.0.id})}}">
                                        <i type="button" class="fa-solid fa-heart fa-2x"></i>
                                    </a>
                                {% else %}
                                    <a class="col-2 p-0 mt-1 d-flex text-decoration-none text-dark" href="{{ path('add_favorite_chaussures', {'id':chaussure.0.id})}}">
                                        <i type="button" class="fa-regular fa-heart fa-2x"></i>
                                    </a>
                                {% endif %}
                            {% endif %}
                            {# End favorite button #}

                    </div>
                    {{form_end(form)}}
                    
                </div>
                

            </form>
        <div class="col-12 p-2 border-top border-dark bg-light">
            <h3>description</h3>
            <p>
                {{ chaussure.0.longDescription }}
            </p>
        </div>
         <div class="col-12 p-2 border-top border-dark bg-light">
            <h3><i class="fa-solid fa-truck-fast"></i>  {{ expedition.0.title }}</h3> 
            <p>{{ expedition.0.description }}</p> 
            <p>{{ expedition.0.longDescription }}</p> 
        </div> 
    </div>

    </div>
</div>
<div class="container">
    <div class="row">
      
        <div class="col-12 bg-light">
            
            <h2>Produits similaires</h2>
        </div>

         {% for chaussure in similarItm | slice(0,4) %} 
        <div class="col-3 bg-light mb-3"> 
            <div class="card" style="width: 18rem;">
                <img src={{ asset('images/'~chaussure.photo) }} class="card-img-top">
                <div class="card-body">
                     <h5 class="card-title">{{ chaussure.title }}</h5> 
                      <p>{{ chaussure.sousCategorie }}</p>
                    <p class="card-text">{{ chaussure.description }}</p>
                    <p>{{ chaussure.price/100 }}€</p>
                    <div class="text-center">
                        <a href={{ path('voir_chaussures', {'id':chaussure.id})}} class="btn btn-warning">Plus d'informations</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}



    </div>
    {# end row #}
</div> 
{# end container #}

    <!-- Modal taille-->
    <div class="modal fade" id="sizeGuideModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
            <div class="modal-header">
                {# <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> #}
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ render(url('size_guide')) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                {# <button type="button" class="btn btn-primary">Save changes</button> #}
            </div>
            </div>
        </div>
    </div>

{# ------------------------------------GALLERY SCRIPT--------------------- #}
<script>
    function myFunction(smallImg) {
        var fullImg = document.getElementById("imsgeBox");
        fullImg.src = smallImg.src;   
    }
</script>
{% endblock %}
