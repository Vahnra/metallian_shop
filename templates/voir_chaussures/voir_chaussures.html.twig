{% extends 'base.html.twig' %}

{% block title %}Chaussures!{% endblock %}

{% block body %}

<div class="container-xl">
    <div class="row">
        <div class="col-12 bg-dark text-white">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-11"><h1>Chaussures : {{ chaussure.0.title }}</h1></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-1 pt-3 text-center bg-dark ">
            
            <img src={{ asset('images/'~chaussure.0.photo) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~chaussure.0.photo2) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~chaussure.0.photo3) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~chaussure.0.photo4) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
        </div>

        <div class="col-7 text-center pt-3 bg-light border-bottom border-dark">
            <img id="imsgeBox" src={{ asset('images/'~chaussure.0.photo) }} class="img-fluid p-2" title="Grande image du produit"/>

        </div>

        <div class="col-4 pt-3 bg-light border-bottom border-end border-dark">
         <div class="row">
        <div class="col-8">
            <h2>{{ chaussure.0.description }}</h2>
        </div>
        <div class="col-4 pt-2">
            <p>{{ chaussure.0.price/100 }}€</p>
        </div>
        </div>


            
            <p>{{ color.0.color }}</p>
            
            <div class="col mb-3 text-center">
                {{form(form)}}
            </div>
            <div class="col-12 p-2 border-top border-dark bg-light">
                <h3>description</h3>
                <p>
                 {{ chaussure.0.longDescription }}
                </p>
            </div>
            <div class="col-12 p-2 border-top border-dark bg-light">
                <h3><i class="fa-solid fa-truck-fast"></i>  {{ expedition.0.title }}</h3> 
                <p>{{ expedition.0.description }}</p> 
                <p>{{ expedition.0.longDescription }}</p> 
            </div> 
        </div>

    </div>
</div>
<div class="container">
    <div class="row">
      
        <div class="col-12 bg-light">
            
            <h2>Produits similaires</h2>
        </div>

         {% for chaussure in similarItm | slice(0,4) %} 
        <div class="col-3 bg-light mb-3"> 
            <div class="card" style="width: 18rem;">
                <img src={{ asset('images/'~chaussure.photo) }} class="card-img-top">
                <div class="card-body">
                     <h5 class="card-title">{{ chaussure.title }}</h5> 
                      <p>{{ chaussure.sousCategorie }}</p>
                    <p class="card-text">{{ chaussure.description }}</p>
                    <p>{{ chaussure.price/100 }}€</p>
                    <div class="text-center">
                        <a href={{ path('voir_chaussures', {'id':chaussure.id})}} class="btn btn-warning">Plus d'informations</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}



    </div>
    {# end row #}
</div> 
{# end container #}



{# ------------------------------------GALLERY SCRIPT--------------------- #}
<script>
    function myFunction(smallImg) {
        var fullImg = document.getElementById("imsgeBox");
        fullImg.src = smallImg.src;   
    }
</script>
{% endblock %}
