{% extends "base.html.twig" %}

{% block title %}Contact{% endblock %}

{% block body %}

    <div class="container-fluid row">

        <h2 class="text-center my-5">Contactez nous</h2>

        <div class="col-5 mx-auto mb-5">

            <h3 class="">Notre accueil est ouvert de 8h Ã  20h</h3>

            <div class="mt-3 mb-4 font-weight-bolder">
                <i class="fa-solid fa-mobile-screen-button"></i>
                +33 1 23 45 67 89</div>

            <div class="form-group">

                {{ form_start(form) }}
                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="form-group">

                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="form-group">

                {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}

            </div>

            <div class="form-group">

                <input type="submit" value="Envoyer" class="btn py-3 col-12 " style="color: white; background-color: rgb(94, 76, 69);">

            </div>

            {{ form_end(form) }}
            
        </div>

    </div>

{% endblock %}
