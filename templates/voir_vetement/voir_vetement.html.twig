{% extends 'base.html.twig' %}

{% block title %}Vetement{% endblock %}

{% block body %}

<div class="container-xl">
    <div class="row">
        <div class="col-12 bg-dark text-white">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-11"><h1>Vêtements : {{ vetement.0.title }}</h1></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-1 pt-3 text-center bg-dark ">
            
            <img src={{ asset('images/'~vetement.0.photo) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~vetement.0.photo2) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~vetement.0.photo3) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~vetement.0.photo4) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>
            <img src={{ asset('images/'~vetement.0.photo5) }} onclick="myFunction(this)" class="img-fluid p-2" title="Petite photo du produit"/>

        </div>

        <div class="col-7 pt-3 bg-light border-bottom border-dark">
            <img id="imageBox" src={{ asset('images/'~vetement.0.photo) }} class="rounded mx-auto d-block p-2" title="Grande image du produit"/>

        </div>

        <div class="col-4 pt-3 bg-light border-bottom border-end border-dark">
        
            <h2>{{ vetement.0.description }}</h2>

            <form method="post">

                    <div class="col-6 py-4">

                        <p><span>Choisissez une couleur :</span></p>
                    
                        <select class="form-select" id="test" name="color" aria-label="Default select example">
                            <option selected>Couleur</option>

                            {% for couleur in couleurs %}

                                <option value="{{ couleur.id }}">{{ couleur.color }}</option>

                            {% endfor %}
                            
                        </select>
                    </div>

                    <div class="col-6 pt-3 pb-4">

                        <p><span>Choisissez une taille :</span></p>

                        <select class="form-select" id="test2" name="size" aria-label="Default select example">
                            <option selected>Taille</option>              
                        
                        </select>
                    </div>

                    <script>

                    var test = {{ vetementVariations|json_encode(constant('JSON_HEX_TAG'))|raw }};

                    console.log(test);
        
                    var options=""; 
                    
                    $("#test").on('click',function(){ 
                        var value=$(this).val(); 
                        options="<option>Taille</option>"
                        
                        for(let i = 0 ; i < test.length; i++) {
                            if(value == test[i].color.id)
                            {
                                options+="<option value='" + test[i].size.id + "'>" + test[i].size.size + "</option>"

                                $("#test2").html(options);

                            }
                        }
                    });
                
                    </script>
      
                <p>{{ vetement.0.sousCategorie }}</p>
                <p>{{ material.0.material }}</p>
                <p>{{ vetement.0.price/100 }}€</p>
                <div class="col mb-3 text-center">
                
                    {{form(form)}}
                </div>

            </form>
            <div class="col-12 p-2 border-top border-dark bg-light">
                <h3>description</h3>
                <p>
                 {{ vetement.0.longDescription }}
                </p>
            </div>
            <div class="col-12 p-2 border-top border-dark bg-light">
                <h3><i class="fa-solid fa-truck-fast"></i>  {{ expedition.0.title }}</h3> 
                <p>{{ expedition.0.description }}</p> 
                <p>{{ expedition.0.longDescription }}</p> 
            </div> 
        </div>

    </div>
</div>
{# ------------------------------------------------------------------------------------ #}
<div class="container">
    <div class="row">
        <div class="col-12 bg-light">
            
            <h2>Produits similaires</h2>
        </div>

         {% for vetement in similarItm |slice(0,4) %} 
        <div class="col-3 bg-light mb-3 "> 
            <div class="card" style="width: 18rem;">
                <img src={{ asset('images/'~vetement.photo) }} class="card-img-top">
                <div class="card-body">
                     <h5 class="card-title">{{ vetement.title }}</h5> 
                      <p>{{ vetement.sousCategorie }}</p>
                    <p class="card-text">{{ vetement.description }}</p>
                    <p>{{ vetement.price/100 }}€</p>
                    <div class="text-center">
                        <a href={{ path('voir_vetement', {'id':vetement.id})}} class="btn btn-warning">Plus d'informations</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}




    </div>
    {# end row #}
    


</div> 
{# end Container #}



{# ----------------------------------------------------------------------------------- #}
<script>
    function myFunction(smallImg){
        var fullImg = document.getElementById("imageBox");
        fullImg.src = smallImg.src;
    }
</script>
{% endblock %}
